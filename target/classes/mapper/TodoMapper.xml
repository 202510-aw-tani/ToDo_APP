<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.todo.mapper.TodoMapper">

    <select id="findAll" resultType="com.example.todo.model.Todo">
        SELECT id, title, completed
        FROM todos
        ORDER BY id
    </select>

    <select id="findById" parameterType="long" resultType="com.example.todo.model.Todo">
        SELECT id, title, completed
        FROM todos
        WHERE id = #{id}
    </select>

    <insert id="insert" parameterType="com.example.todo.model.Todo"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO todos (title, completed)
        VALUES (#{title}, #{completed})
    </insert>

    <delete id="deleteById" parameterType="long">
        DELETE FROM todos
        WHERE id = #{id}
    </delete>

    <update id="update" parameterType="com.example.todo.model.Todo">
        UPDATE todos
        SET title = #{title},
            completed = #{completed}
        WHERE id = #{id}
    </update>

</mapper>
